<?xml version="1.0" encoding="utf-8"?>
<!-- This is the portrait fragment that displays a list of the details about a particular location's weather forecast.
     This xml file is comprised of several LinearLayouts and TextViews to show the details.
     Created by Gemma Grant s2030516 on 22/08/2022
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/image_view_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@android:color/holo_blue_light" />
    </LinearLayout>
    <TextView
        android:id="@+id/locationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Glasgow"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#2196F3"
        android:textSize="38sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/table_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <LinearLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/locationName"
        app:layout_constraintEnd_toEndOf="@id/locationName"
        app:layout_constraintStart_toStartOf="@id/locationName">




        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:id="@+id/title_column"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:includeFontPadding="false"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Day "
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Condition"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Min Temp"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Max Temp"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Wind Speed"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Wind Direction"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Visibility"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:text="Pressure"
                android:height="30dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textAllCaps="true"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:text="Humidity"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:height="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:text="UV Risk"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:height="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:text="Pollution"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:height="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:text="Sunrise"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:height="30dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunset"
                android:id="@+id/textView13"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:height="30dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/current_day"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            >

            <TextView
                android:id="@+id/day1"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Today"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/condition1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/min_temp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/max_temp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/wind_speed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/wind_direction1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/visibility1"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pressure1"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/humidity1"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uv_risk1"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pollution1"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sunrise1"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sunset1"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/tomorrow"
            android:clickable="true"
           >

            <TextView
                android:id="@+id/day2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/condition2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/min_temp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/max_temp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/wind_speed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/wind_direction2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/visibility2"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pressure2"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/humidity2"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uv_risk2"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pollution2"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sunrise2"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sunset2"
                android:height="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/day_after_tomorrow"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:id="@+id/day3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/condition3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/min_temp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/max_temp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/wind_speed3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/wind_direction3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/visibility3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/pressure3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/humidity3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/uv_risk3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/pollution3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/sunrise3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/sunset3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>